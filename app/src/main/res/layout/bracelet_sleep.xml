<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f3e9e7"
    android:orientation="vertical">

    <com.bt.elderbracelet.view.TitleView
        android:id="@+id/titleview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/sleep_tip_top"
                android:textSize="17dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:gravity="center|center_vertical">

                <com.bt.elderbracelet.tools.other.TasksCompletedSleepView
                    android:id="@+id/sleep_view"
                    android:layout_width="285dp"
                    android:layout_height="285dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    app:circleColor="@color/ride_e9"
                    app:radius="90dp"
                    app:ringColor="@color/ride_81"
                    app:strokeWidth="12dp"
                    />
                <TextView
                    android:id="@+id/tv_refresh_sleep"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:text="刷新"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="20dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="285dp"
                    android:gravity="center"
                    android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/lin_deep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/sleep_color"
                        android:text="@string/sleep_deep"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/tv_sleep_deep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:padding="3dp"
                        android:textStyle="bold"
                        android:textColor="@color/sleep_circle_data_bg"
                        android:textSize="25dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/sleep_color"
                        android:text="@string/hour_unit"
                        android:textSize="20dp" />

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/lin_low"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin_deep"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/sleep_color"
                        android:text="@string/sleep_low"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/tv_sleep_low"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:padding="3dp"
                        android:textStyle="bold"
                        android:textColor="@color/sleep_circle_data_bg"
                        android:textSize="25dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/sleep_color"
                        android:text="@string/hour_unit"
                        android:textSize="20dp" />

                </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="100dp"
                        android:background="@color/line_color" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin_low"
                    android:gravity="center">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/sleep_color"
                        android:text="@string/sleep_total"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/tv_sleep_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:padding="3dp"
                        android:textStyle="bold"
                        android:textColor="@color/sleep_circle_data_bg"
                        android:textSize="25dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/sleep_color"
                        android:text="@string/hour_unit"
                        android:textSize="20dp" />

                </LinearLayout>
              </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="40dp"
                android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/litter_remind"
                android:textColor="@color/black"
                android:textSize="21dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="卧室要安静,要足够暗,因为黑暗可以帮助大脑松果体素,这是一种促使人睡眠的激素,厚重的窗帘可以把光线、风扇或机器噪声挡在外面。"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textSize="15dp" />
        </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>