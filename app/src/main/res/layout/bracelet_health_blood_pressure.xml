<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1">

            <RelativeLayout
                android:id="@+id/rl_pressure"
                android:layout_width="70dp"
                android:layout_height="43dp"
                android:background="@drawable/pressure_bg"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="31dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/pressure_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="血压"
                    android:textSize="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="3dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_pressure_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="13dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hig_pre"
                        android:textSize="13dp"
                        />
                    <TextView
                        android:id="@+id/tv_pressure_high"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/sugar_bg"
                        android:layout_marginLeft="2dp"
                        android:textSize="21dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pressure_unit"
                        android:layout_marginLeft="2dp"
                        android:textSize="13dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/low_pre"
                        android:textSize="13dp"
                        android:layout_marginLeft="2dp"
                        />
                    <TextView
                        android:id="@+id/tv_pressure_low"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/sugar_bg"
                        android:layout_marginLeft="2dp"
                        android:textSize="21dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pressure_unit"
                        android:layout_marginLeft="2dp"
                        android:textSize="13dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
