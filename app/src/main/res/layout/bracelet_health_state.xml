<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9ECEF"
    android:orientation="vertical" >

    <com.bt.elderbracelet.view.TitleView
        android:id="@+id/titleview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="22dp" />

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blood_pressure"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etbloodPressure"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nameinput"
            android:hint="@string/bloodPressure"
            android:inputType="numberDecimal"
            android:paddingLeft="20dp"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blood_pressure"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etbloodPressureLow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nameinput"
            android:hint="@string/lowbloodPressure"
            android:inputType="numberDecimal"
            android:paddingLeft="20dp"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
         android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blood_sugar"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etbloodSugar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nameinput"
            android:hint="@string/bloodsugar1"
            android:inputType="numberDecimal"
            android:paddingLeft="20dp"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blood_sugar"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etbloodSugarAfter"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nameinput"
            android:hint="@string/bloodsugar2"
            android:inputType="numberDecimal"
            android:paddingLeft="20dp"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvsure"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/textview_style"
        android:gravity="center"
        android:text="@string/sure"
        android:textColor="#ffffff"
        android:textSize="22dp" />

</LinearLayout>