<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:speedreader="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.bt.elderbracelet.view.TitleView
        android:id="@+id/titleview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/basic_table_botton"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5">

            <TextView
                android:id="@+id/telephone_remind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:gravity="left"
                android:text="@string/sleep_remind"
                android:textColor="@color/text_blue_color"
                android:textSize="16sp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5">

            <CheckBox
                android:id="@+id/cb_sleep_remind"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="20dp"
                android:button="@drawable/che_style"/>
        </RelativeLayout>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="睡眠时间"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/basic_table_botton">

        <TextView
            android:id="@+id/tv_sleep_start"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="13dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:text="00:00"
            android:textColor="@color/text_blue_color"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_sleep_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_sleep_start"
            android:layout_alignBottom="@+id/tv_sleep_start"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:padding="20dp"
            android:text="00:00"
            android:textColor="@color/text_blue_color"
            android:textSize="16sp"/>

        <CheckBox
            android:id="@+id/cb_sleep_time"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="20dp"
            android:button="@drawable/che_style"/>
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="睡眠提前提醒"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/basic_table_botton">


        <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/content_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:foregroundGravity="center_horizontal"
            tools:ignore="MergeRootFrame">

            <TextView
                android:id="@+id/tv_sleep_remind"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="00:00"
                android:textColor="@color/text_blue_color"
                android:textSize="18sp"/>
        </FrameLayout>

        <CheckBox
            android:id="@+id/cb_sleep_time_remind"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:button="@drawable/che_style"/>
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="午休时间"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/basic_table_botton">

        <TextView
            android:id="@+id/tv_lunch_sleep_start"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:text="00:00"
            android:textColor="@color/text_blue_color"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_lunch_sleep_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_lunch_sleep_start"
            android:layout_alignBottom="@+id/tv_lunch_sleep_start"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:padding="20dp"
            android:text="00:00"
            android:textColor="@color/text_blue_color"
            android:textSize="16sp"/>

        <CheckBox
            android:id="@+id/cb_lunch"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:button="@drawable/che_style"/>
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="睡眠目标"
        android:visibility="visible"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:background="@drawable/basic_table_botton"
        android:visibility="visible">

        <TextView
            android:id="@+id/sleep_aim_hours"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"
            android:text="8小时"
            android:textColor="@color/text_blue_color"
            android:textSize="18sp"/>

    </RelativeLayout>


</LinearLayout>