<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.bt.elderbracelet.view.TitleView
        android:id="@+id/titleview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/basic_table_botton"
        android:descendantFocusability="blocksDescendants">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="15dp"
            android:text="开关设置"
            android:textSize="16dp"/>

        <CheckBox
            android:id="@+id/cb_swith"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:button="@drawable/che_style"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/basic_table_botton"
        android:descendantFocusability="blocksDescendants">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:text="不运动时间(分钟)"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/tv_sit_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="20min"
            android:textColor="@color/text_blue_color"
            android:textSize="20sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/basic_table_botton"
        android:descendantFocusability="blocksDescendants">

        <TextView
            android:id="@+id/tv_medicine_name_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="开始时间"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/tv_medicine_name_time"
            android:gravity="right"
            android:padding="10dp"
            android:text="00:00"
            android:textColor="@color/text_blue_color"
            android:textSize="20sp"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/basic_table_botton"
        android:descendantFocusability="blocksDescendants">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="15dp"
            android:text="结束时间"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="00:00"
            android:textColor="@color/text_blue_color"
            android:textSize="20sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/cb_one"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:background="@drawable/bg_cbx_alarm_default"
                    android:button="@null"
                    android:gravity="right|center_vertical"
                    android:paddingRight="10dp"
                    android:text="@string/weeks_monday"
                    android:textSize="13sp"/>

                <CheckBox
                    android:id="@+id/cb_two"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/bg_cbx_alarm_default"
                    android:button="@null"
                    android:gravity="right|center_vertical"
                    android:paddingRight="10dp"
                    android:text="@string/weeks_tuesday"
                    android:textSize="13sp"/>

                <CheckBox
                    android:id="@+id/cb_three"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/bg_cbx_alarm_default"
                    android:button="@null"
                    android:gravity="right|center_vertical"
                    android:paddingRight="10dp"
                    android:text="@string/weeks_wednesday"
                    android:textSize="13sp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/cb_four"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:background="@drawable/bg_cbx_alarm_default"
                    android:button="@null"
                    android:gravity="right|center_vertical"
                    android:paddingRight="10dp"
                    android:text="@string/weeks_thursday"
                    android:textSize="13sp"/>

                <CheckBox
                    android:id="@+id/cb_five"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/bg_cbx_alarm_default"
                    android:button="@null"
                    android:gravity="right|center_vertical"
                    android:paddingRight="10dp"
                    android:text="@string/weeks_friday"
                    android:textSize="13sp"/>

                <CheckBox
                    android:id="@+id/cb_six"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/bg_cbx_alarm_default"
                    android:button="@null"
                    android:gravity="right|center_vertical"
                    android:paddingRight="10dp"
                    android:text="@string/weeks_Saturday"
                    android:textSize="13sp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/cb_seven"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:background="@drawable/bg_cbx_alarm_default"
                    android:button="@null"
                    android:gravity="right|center_vertical"
                    android:paddingRight="10dp"
                    android:text="@string/weeks_sunday"
                    android:textSize="13sp"/>

                <CheckBox
                    android:id="@+id/cb_repeat_once"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/bg_cbx_alarm_default"
                    android:button="@null"
                    android:gravity="right|center_vertical"
                    android:paddingRight="5dp"
                    android:text="@string/repeat_once"
                    android:textSize="13sp"/>

                <CheckBox
                    android:id="@+id/CheckBox9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/bg_cbx_alarm_default"
                    android:button="@null"
                    android:gravity="right|center_vertical"
                    android:paddingRight="5dp"
                    android:text="@string/weeks_wednesday"
                    android:textSize="13sp"
                    android:visibility="invisible"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>