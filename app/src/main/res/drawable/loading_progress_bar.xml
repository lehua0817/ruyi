<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:id="@android:id/background">
		<shape>
			<corners android:radius="5dip" />
			<gradient android:startColor="#ff0b1110"
				android:centerColor="#ff0b1110" android:centerY="0.75"
				android:endColor="#ff0b1110" android:angle="270" />
		</shape>
	</item>

	<item android:id="@android:id/secondaryProgress">
		<clip>
			<shape>
				<corners android:radius="5dip" />
				<gradient android:startColor="#8000d0c2"
					android:centerColor="#8000d0c2" android:centerY="0.75"
					android:endColor="#a000d0c2" android:angle="270" />
			</shape>
		</clip>
	</item>

	<item android:id="@android:id/progress">
		<clip>
			<shape>
				<corners android:radius="5dip" />
				<gradient android:startColor="#ffffffff"
					android:centerColor="#ffffffff" android:centerY="0.75"
					android:endColor="#ffffffff" android:angle="270" />
			</shape>
		</clip>
	</item>

</layer-list>