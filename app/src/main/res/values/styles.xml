<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
    </style>

    <style name="Text.Title" parent="@style/Text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ProgressBarHorizontal_color" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/loading_progress_bar</item>
        <item name="android:minHeight">2dip</item>
        <item name="android:maxHeight">2dip</item>
    </style>

    <style name="Text">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.UMDefault" parent="android:style/Theme.NoTitleBar"></style>

    <style name="mystyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/register_check</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@drawable/open</item>
        <item name="android:windowExitAnimation">@drawable/close</item>
    </style>

    <style name="butotn_display">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">0dp</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
    </style>

    <style name="dialog_style_light" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 背景透明 -->
    </style>

    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/xml_score_ratingbar</item>
        <item name="android:background">@drawable/xml_score_ratingbar</item>
        <item name="android:minWidth">30.0dip</item>
        <item name="android:minHeight">32.0dip</item>
        <item name="android:isIndicator">true</item>
    </style>

